<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property">
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="available" domain="['!', ('state', '=', 'new'),
                    ('state', '=', 'offer received')]"/>
                    <group expand="1" string="Filter/Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <sheet>
                        <group>
                            <field name="name" class="h1" nolabel="1"/>
                        </group>
                        <group>
                            <field name="property_tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="postcode"/>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                </group>
                                <group>
                                    <field name="garden_area"/>
                                </group>
                                <group>
                                    <field name="garden_orientation"/>
                                </group>
                                <group>
                                    <field name="property_type_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <tree string="Property Offers">
                                    <field name="offer_ids"/>
                                </tree>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="partner_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Properties">
                    <field name="name"/>
                    <field name="property_tag_ids"/>
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Estate Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property
                </p>
                <p>
                    Use Real Estate to find out what residence suits you.
                </p>
            </field>
        </record>

    </data>
</odoo>